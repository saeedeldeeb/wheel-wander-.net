<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="/dashboard/index" class="brand-link">
        <img src="~/dist/img/bike.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
             style="background:white">
        <span class="brand-text font-weight-light">Wheel Wander</span>
    </a>
    @{
        var action = this.ViewContext.RouteData.Values["action"] as string;
    }
    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                with font-awesome or any other icon font library -->
                <li class="nav-item">
                    <a asp-controller="Dashboard" asp-action="Index" class="nav-link @(action == "Index" ? "active" : "")">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>
                            Dashboard
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Dashboard" asp-action="Users" class="nav-link @(action == "Users" ? "active" : "")">
                        <i class="nav-icon fa fa-users"></i>
                        <p>
                            Users
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Dashboard" asp-action="Rentals" class="nav-link @(action == "Rentals" ? "active" : "")">
                        <i class="nav-icon fas fa-unlock"></i>
                        <p>
                            Rentals
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-bicycle"></i>
                        <p>
                            Bikes
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Dashboard" asp-action="Stations" class="nav-link @(action == "Stations" ? "active" : "")">
                        <i class="nav-icon fas fa-subway"></i>
                        <p>
                            Stations
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-exclamation-circle"></i>
                        <p>
                            Reported Problems
                            <span class="right badge badge-danger">3</span>
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-credit-card"></i>
                        <p>
                            Memberships
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-cog"></i>
                        <p>
                            Settings
                        </p>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>